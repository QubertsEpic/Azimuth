<Window x:Class="FlighRewindClientWrapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlighRewindClientWrapper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="DefaultTextBlock" Text="Placeholder" FontSize="40px" Foreground="Black"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Connect" Click="Button_Click_1"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Get Data" Click="Button_Click"/>

    </Grid>
</Window>
